<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/currencyCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_5x"
        android:layout_marginTop="@dimen/spacing_5x"
        android:paddingBottom="@dimen/spacing_5x"
        android:textSize="@dimen/code_currency_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currencyBuyingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_7x"
        android:drawableEnd="@drawable/ic_arrow_up"
        android:drawablePadding="@dimen/spacing_2x"
        app:layout_constraintStart_toEndOf="@id/currencyCodeTextView"
        app:layout_constraintTop_toTopOf="@id/currencyCodeTextView" />

    <TextView
        android:id="@+id/currencySellingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_7x"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:drawablePadding="@dimen/spacing_2x"
        app:layout_constraintStart_toEndOf="@id/currencyCodeTextView"
        app:layout_constraintTop_toBottomOf="@id/currencyBuyingTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>